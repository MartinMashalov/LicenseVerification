# Copy this file to .env and fill in your actual values

# Backend API URL (default for local development)
REACT_APP_API_BASE_URL=http://localhost:8005

# Demo Mode - Set to 'true' to skip Stripe payment for demos/testing
# Set to 'false' or remove for production with real payments
REACT_APP_DEMO_MODE=true

# Stripe Configuration
# Get these from your Stripe Dashboard at https://dashboard.stripe.com/apikeys
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Price ID for your $65/month subscription
# Create this in your Stripe Dashboard under Products
REACT_APP_STRIPE_PRICE_ID=price_your_stripe_price_id_here

# API Configuration
API_BASE_URL=http://localhost:8005
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
MISTRAL_API_KEY=your_mistral_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=your_email@gmail.com

# Database Configuration
DB_PATH=./db/visionpay_licenses.db

# Instructions:
# 1. Copy this file: cp env.example .env
# 2. Fill in your actual Stripe keys from the dashboard
# 3. Create a product and price in Stripe for $65/month
# 4. Update the price ID above with your actual price ID 